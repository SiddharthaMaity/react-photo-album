{
    "include": ["src"],
    "compilerOptions": {
        "strict": true,
        "target": "es2018",
        "module": "esnext",
        "jsx": "react-jsx",
        "noEmit": true,
        "declaration": false,
        "inlineSources": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "isolatedModules": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
